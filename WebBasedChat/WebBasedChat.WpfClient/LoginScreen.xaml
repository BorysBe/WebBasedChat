<Window x:Class="WebBasedChat.WpfClient.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebBasedChat.WpfClient"
        mc:Ignorable="d"
        Title="LoginScreen" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Nickname" Height="28" HorizontalAlignment="Left" Margin="8,6,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,38,0,0" Name="Nickname" VerticalAlignment="Top" Width="274" />
        <Button Content="Proceed" Height="23" Click="Proceed_OnClick" HorizontalAlignment="Left" Margin="10,74,0,0" Name="Proceed" VerticalAlignment="Top" Width="117"/>
    </Grid>
</Window>
